---
interface Props {
    title: string;
    href: string;
}

const { href, title } = Astro.props;
---

<li>
    <a
        href={href}
        class="block py-2 px-3 text-gray-900 rounded hover:bg-blue-500 hover:text-white md:hover:bg-transparent md:border-0 md:hover:text-blue-500 md:p-0"
        >{title}</a
    >
</li>
